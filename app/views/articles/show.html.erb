<div class="p-2">
    <h1>Article summary</h1> <br>
    <h4>Article - <%= article.title %></h4>
    <p>
        <%= article.body %>
    </p>
    <hr>
    <h5>
        Comments:
    </h5>
    <ul class="list-group">
    <% article.comments.each do |comment| %>
        <table class="list-group-item">
        <thead>
        <tr>
            <th>
                <b> @<%= comment.user.displayname %> </b> - <%= comment.created_at %>
            </th>
        </tr>
        </thead>
        <tr>
            <td>
            <p> <%= comment.body %> </p>
            </td>
        </tr>
        </table>
    <% end %>
    </ul>
</div>
